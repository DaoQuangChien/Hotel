standardShadow()
  box-shadow 0px 1px 4px #757575
standardPadding()
  padding 10px 15px
standardBorderRadius()
  border-radius 2px
.default-action
  position fixed
  bottom 15px
  right 15px
  height 48px
  width 48px
  display inline-block
  border-radius 50%
  background #F44336
  color #FFF
  font-size 1.3rem
  z-index 999
  box-shadhoow 0px 1px 4px #757575
  cursor pointer
  border none
  transition all .5s
  &:before
    content '\f067'
    font-family 'fontawesome'
  &:hover
    color #FFF
    background #d2190b
    box-shadow 0px 2px 8px #757575
  &:active
    transform: rotateZ(45deg)
table.truntcase
  width 100%
  table-layout fixed
  color #757575
  thead
    border-bottom 1px solid $light
    font-weight bold
  td
    padding 10px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
.table-footer
  font-size 0.7rem
  position relative
  margin 5px 10px
  height 40px
  p
    font-size 0.7rem
  .page-info
    position absolute
    left 0px
    top 0px
    display inline
  .pages
    position absolute
    right 0px
    top 0px
    display inline
    li
      cursor pointer
      padding 5px
      display inline
      &.active a
        color $primary
      a
        padding 0px
        color $dark
        &:hover
          color $primary
.btn
  border none
  text-transform uppercase
  padding 10px 15px
  border-radius 2px
  transition all .5s
  cursor pointer
.btn-primary
  background $primary
  color #FFF
  &:hover
    background #007888
.btn-negative
  background $negative
  color #FFF
  &:hover
    background #a92900
.btn-group
  padding 15px
.control-group
  .q-select
    top -4px
  &.inline
    margin 0px 10px
    max-width 400px
    display inline-block
    width 100%
.md-theme-default a:not(.md-button):hover
  color $primary
h1, h2, h3, h4, h5, h6
  margin 0
h1
  font-size 1.45rem
h2
  font-size 1.30rem
h3
  font-size 1.15rem
h4
  font-size 1rem
h5
  font-size 0.85rem
h6
  font-size 0.7rem