@import '~src/themes/quasar.variables.styl'
.container
  position relative
  margin auto
  padding 15px
  @media (min-width $screen-sm-min)
    &
      width 750px
  @media (min-width $screen-md-min)
    &
      width 970px
  @media (min-width $screen-lg-min)
    &
      width 1170px
.md-theme-default a:not(.md-button):hover
  color #ffffff
  text-decoration none
.control-group
  margin 10px 0px
  position relative
.mainHeader
  standardShadow()
  background-color $primary
  padding 0
  position relative
  color #fff
  h1
    font-size 1.45rem
    padding 15px
    margin 0
    font-weight bold
  ul.nav
    padding 5px 15px 0px
    margin 0
    li
      display inline-block
      padding 0px
      position relative
      .q-icon
        position: absolute
        top: -5px
        left: calc(50% - 7px)
      a
        standardPadding()
        color #FFF
        display inline-block
        &.router-link-exact-active,&.router-link-active,&:active,&:hover
          color #ffffff
          border-bottom 1px solid $warning
        @media (min-width $screen-sm-min)
          span
            padding 0px
            &.fa
              position absolute
              top -5px
              left calc(~'50% - 7px')
        @media (max-width $screen-xs-max)
          span
            padding 0px
            display none
            &.fa
              display inline-block
  #search 
    position absolute
    top 0px
    right 0px
    padding 0px 15px
    margin 15px 0px
    width 50%
    .input 
      color #ffffff
      border-bottom 1px solid #FFF
    .q-icon
      position absolute
      right 0px
      padding 5px
.input
  background transparent
  width 100%
  padding 5px 10px
  border none
  border-bottom 1px solid $primary
  &:focus
    border-bottom-color: $warning
    outline none
.main-footer
  text-align center
  background transparent
  border-top 1px solid #EEEEEE
  padding 15px