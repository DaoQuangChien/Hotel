@import '~src/themes/quasar.variables.styl'
.content-side .hotel-name
  padding-top: 0px
  padding-bottom: 0px
.slide-pictures
  width: 100%
  position: relative
  margin: 15px 0px
  .scroll-left, .scroll-right
    height: 100%
    vertical-align: middle
    padding: 60px 10px
    background: #fff
    opacity: 0.7
    cursor: pointer
  .scroll-left
    position: absolute
    left: 0px
    top: 0px
  .scroll-right
    position: absolute
    right: 0px
    top: 0px
  .slide-view
    width: 100%
    padding: 0px 15px
    overflow-x: auto
    overflow-y: hidden
    ::-webkit-scrollbar
      width: 0px
      background: transparent
    .pictures
      display: inline-flex
      .picture
        display: inline-block
        width: 200px
        margin-top 0
        padding 15px
        img
          standardBorderRadius()
          standardShadow()
          padding: 0px
        input[type=file]
          display: inline-block
          width: 100%
          height: 100%
          opacity: 0
        &.uploader
          standardBorderRadius()
          standardShadow()
          width: 170px
          margin: 15px
          position: relative
          background: #FFF
          &::before
            content: 'Upload Image'
            position: absolute
            text-transform: uppercase
            width: 100%
            text-align: center
            top: 40px