@import '~src/themes/quasar.variables.styl'
.search-form
  padding: 0px
  @media (min-width $screen-sm-min)
    .control-group
      width: 300px
      display: inline-block
  @media (max-width $screen-xs-max)
    .control-group
      width: 100%
.hotels
  padding-top: 15px
  table.truntcase
    td.desc,td.asc
      position: relative
    td.desc::after
      content: ""
      display: inline-block
      height: 5px
      width: 5px
      position: absolute
      right: 5px
      top: 15px
      border-left: 5px solid transparent
      border-right: 5px solid transparent
      border-top: 5px solid $dark
    td.asc::after
      content: ""
      display: inline-block
      height: 5px
      width: 5px
      position: absolute
      right: 5px
      top: 15px
      border-left: 5px solid transparent
      border-right: 5px solid transparent
      border-bottom: 5px solid $dark
.grid
  @media(min-width: $screen-xs-max)
    .room-card
      height: 250px
      position: relative
      .btn-group
        position: absolute
        bottom: 0px
        left: 0px
  .room-card
    standardShadow()
    standardBorderRadius()
    .summary
      position: relative
      .picture img
        width: 100%
      @media(min-width: $screen-xs-max)
        .name, .kind, .facilities
          width: calc(100% - 175px)
          white-space: nowrap
          text-overflow: ellipsis
          overflow: hidden
        .picture
          position: absolute
          top: 0px
          right: 0px
          width: 145px
          img
            padding: 0px
    .description
      .content
        overflow: hidden
        text-overflow: ellipsis
        max-height: 95px
      .content, .content *
        padding: 0px
      label
        font-weight: bold
        padding: 5px 0px
        display: inline-block
    .price, .quantity
      font-weight: bold
    .name, .kind, .facilities, .description, .price, .quantity
      padding: 5px 15px
    @media(min-width: $screen-xs-max)
      .price
        display: inline-block
        float: left
      .quantity
        display: inline-block
        float: right
.block-event, .block-price
  &.search-form
    padding-bottom: 5px
    margin-left: 15px
    @media (max-width: $screen-xs-max)
      .control-group
        width: 200px
        display: inline-block
    @media (max-width: $screen-xs)
      .control-group
        width: 100%
  &.block-group
    display: flex
    margin-left: 15px
    border-bottom: 1px solid $light
    &:nth-child(2)
      border-top: 1px solid $light
  .block-content
    border-top: none
    border-radius: 0
    box-shadow: none
    flex: 1
    p
      padding: 0 0 15px 15px
  .block-action
    flex: 0
    display: flex
    flex-direction: column
    justify-content: center
    .fa
      font-size: 1.3rem
      padding: 0
      padding-bottom: 15px
      &:last-child
        padding-bottom: 0
    @media (max-width: $screen-xs-max)
      justify-content: flex-start
  .price-text
    flex: 1
    p
      padding: 0 0 15px 0
      font-size: 1.3rem
  .input
    width: calc(100% - 75px)
  .time
    display: inline-block
  @media (min-width: $screen-sm-min)
    .control-group
      width: 200px
    .time
      padding: 15px 0
    .fa-calendar
      font-size: 20px
      padding-left: 10px
  @media (max-width: $screen-xs-max)
    .time
      width: 50px
.block-price-edit
  max-width: 590px
  .block-container
    padding: 0
    &>ul, &>ul>li
      padding: 0
  .label-text
    display: inline-block
    width: 70px
    margin-right: 15px
  .select-form
    display: inline-flex
    flex-wrap: wrap
    padding: 0
    li
      padding: 0 0 0 20px
      &:first-child
        padding: 0
  label
    padding: 0
    line-height: 30px
.edit-price-form
  display: flex
  flex-direction: column
  padding: 0px
  &[data-time='monthly']
    .line-group:first-child
      padding-right: 10px
    .control-group
      display: flex
      justify-content: flex-end
      .time
        width: 140px
        margin-right: 10px
  &[data-time='weekly']
    ul.line-group
      li
        .check-box
          display: inline-block
          padding-top: 3px
        padding: 0 0 0 10px
        &:first-child
          padding: 0
  .control-group
    .time
      display: inline-block
      width: 35px
    .date-picker.input
      width: 110px
    .fa
      padding: 5px
  .line-group
    padding: 5px
    display: flex
    align-items: baseline
    flex-wrap: wrap
    &:first-child
      align-self: flex-end
    .block-common
      &:nth-child(2)
        flex-direction: column
        align-items: center
        padding: 0
        flex: 5
      &:nth-child(3)
        flex: 1
        padding: 0 0 0 15px
        display: flex
        justify-content: flex-end
        flex-wrap: wrap
    input[type='checkbox']
      width: initial
    &:last-child
      justify-content: flex-end
@media (max-width: 585px)
  .block-price
    &.block-group
      flex-direction: column
    .block-action
      flex-direction: row
      .fa
        padding-bottom: 0
        margin-right: 15px
  .block-price-edit
    .label-text
      width: 100%
      margin-bottom: 15px
    .select-form li
      margin-bottom: 15px
  .edit-price-form
    .line-group
      &:first-child
        justify-content: center
      .input:not(.date-picker)
        width: 100%
        margin-left: 0
      .block-common
        &:nth-child(2)
          flex: 5
        &:nth-child(3)
          flex: 1
    .control-group
      margin-bottom: 15px
    &[data-time='weekly'] ul.line-group li
      margin-bottom: 10px
    &[data-time='monthly'] .control-group
      justify-content: flex-start
@media (max-width: $screen-xs)
  .block-price-edit label
    display: block