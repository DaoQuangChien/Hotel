@import '~src/themes/quasar.variables.styl'
@media (min-width $screen-sm-min)
  .dash-board
    display flex
    flex-direction row
  .block:nth-child(2n) 
    display block
    width 40%
  .block:nth-child(2n+1) 
    display block
    width 60%
  .block:nth-child(2n + 1) .block-container
    height 320px
  .block-container
    box-sizing border-box
    height 100%
    padding 5px
@media (max-width $screen-xs-max)
  .block:nth-child(2n + 1) .block-container
    height 320px
  .block-container
    box-sizing border-box
    height 100%
    padding 5px
.md-body-1, body
  main
    padding 15px
    line-height 1
  ul
    margin 0
.block-content
  box-sizing border-box
  background #FFF
  height 100%
  standardBorderRadius()
  standardShadow()
  border-top 2px solid $dark
  padding 0px
  overflow hidden
  position relative
  .tabs
    position absolute
    width 100%
    height 100%
    top 0px
    &:nth-child(1)
      left -100%
      border-right 1px solid $primary
    &:nth-child(2)
      left 100%
      border-left 1px solid $primary
    &.active
      left 0
  .title
    standardPadding()
    font-size 1.15rem
    border-bottom 1px solid $light
    background-color $primary
    color #FFF
    .btn
      cursor pointer
  .content
    height calc(100% - 40px)