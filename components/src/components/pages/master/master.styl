 @import '~src/themes/quasar.variables.styl'
body {
  color $dark
}
.md-toolbar.md-theme-default
  background-color white
  border-bottom solid 1px $light
  .logo
    height 100%
.navs
  margin 0
  .nav
    display inline-block
    a
      transition border-color 0.5s
      display inline-block
      box-sizing border-box
      padding 32px 10px
      color $dark
      text-transform uppercase
      border-bottom solid 3px white
      &.router-link-active, &:hover
        border-bottom solid 3px $secondary
        color $dark
        text-decoration none
.md-input-container.md-theme-default.md-input-focused
  label, .fa
    color $warning
  &:after
    background-color $warning
.md-theme-default.md-button:not([disabled]).md-primary:not(.md-icon-button)
  background-color $warning
  color white
  &:hover:not([disabled]):not(.md-raised)
    background-color $dark
.flat-btn
  width 140px
  padding 15px 25px
  text-transform uppercase
  border-radius 54px
  cursor pointer
  border none
  transition: background-color .5s;
  color $dark
  background-color white
  &:hover
    background-color $warning
    color white
.readmore
  background-color $warning
  color white
  &:hover
    background-color $dark
footer
  padding 30px
  background $dark
  color white
  font-size 1.15rem
  text-transform uppercase
  text-align center
@media screen and (min-width: 951px)
  .container
    max-width 1170px
    margin auto
    padding 0px 10px
